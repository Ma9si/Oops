// To find largest of 3 numbers

public class Largest1
{
public static void main(String args[])
{
int a,b,c;
a=Integer.parseInt(args[0]);
b=Integer.parseInt(args[1]);
c=Integer.parseInt(args[2]);
if(a>b && a>c)
System.out.println(a +" is largest");
if(b>a && b>c)
System.out.println(b +" is largest");
else
System.out.println(c +" is largest");
}
}

// To find sum of 2 numbers

public class Sum
{
public static void main(String args[])
{
int a,b,c;
a=Integer.parseInt(args[0]);
b=Integer.parseInt(args[1]);
c=a+b;
System.out.println(c +" is sum of of these two numbers");
}
}

//Fibonacci Series

public class Fibo
{
public static void main(String args[])
{
int a=0,b=1,c;
for(int j=2; j<=10; j++)
{
c=a+b;
System.out.println(c);
a=b;
b=c;
}
}
}

//Commnd Line Calculator

// To find sum of 2 numbers

public class Calculator
{
public static void main(String args[])
{
int a,b;
if(args[0]=="addition")
a=Integer.parseInt(args[1]);
b=Integer.parseInt(args[2]);
c=a+b;
System.out.println("c is sum of these numbers");


if(args[0]=="subtraction")
a=Integer.parseInt(args[1]);
b=Integer.parseInt(args[2]);
c=a-b;
System.out.println(c +" is subtraction of of these two numbers");

if(args[0]=="multiplication")
a=Integer.parseInt(args[1]);
b=Integer.parseInt(args[2]);
c=a*b;
System.out.println(c +" is multiplicaton of of these two numbers");

if(args[0]=="division")
a=Integer.parseInt(args[1]);
b=Integer.parseInt(args[2]);
c=a/b;
System.out.println(c +" is division of of these two numbers");
}
}






